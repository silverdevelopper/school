@model school.Models.ViewModel.StudentViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Add new Member</h2>
<form method="post" action="Create">
    <div class="form-group row">

    </div>
    <div class="form-group row">

        <div class="col-2">
            <label> Student Name </label>
        </div>
        <div class="col-4">
            <input asp-for="Student.name" class="form-control" />
        </div>

    </div>
    <div class="form-group row">

        <div class="col-2">
            <label> Class </label>
        </div>
        <div class="col-4">
            <select asp-for="Student.ClasseID" asp-items="Model.CSelectListItem(Model.Classes)" class="form-control"></select>
        </div>
    </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
</form>
