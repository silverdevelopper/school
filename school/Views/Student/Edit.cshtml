@model school.Models.ViewModel.StudentViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Edit  Member</h2>
<form method="post" action="Edit">
    <input hidden asp-for="Student.id" />
    <div class="form-group row">

    </div>
    <div class="form-group row">

        <div class="col-2">
            <label> Student Name </label>
        </div>
        <div class="col-4">
            <input asp-for="Student.name" class="form-control" />
        </div>

    </div>
    <div class="form-group row">

        <div class="col-2">
            <label> Class </label>
        </div>
        <div class="col-4">
            <select asp-for="Student.ClasseID" asp-items="Model.CSelectListItem(Model.Classes)" class="form-control"></select>
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Edit" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>
</form>
